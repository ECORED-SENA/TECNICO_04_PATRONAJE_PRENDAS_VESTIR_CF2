mixin pageHeader(tituloTema, srcImagen, pagina)
    .curso-portada

        .row.align-items-end

            .col-12.col-lg-6

                .curso-container

                    h3#curso-titulo-componente.curso-subtitulo.text-white Técnico en patronaje industrial de prendas de vestir
                    h1#curso-titulo-tema.curso-titulo.text-white Reconocimiento de la estructura corporal

                    .brand-line-primary

                    if pagina == 'main'

                        .keywords
                            span.badge.badge-pill.badge-brand-light.bg-brand-color-1.mr-2.text-white Corporal 
                            span.badge.badge-pill.badge-brand-light.bg-brand-color-1.mr-2.text-white Patronaje 
                            span.badge.badge-pill.badge-brand-light.bg-brand-color-1.mr-2.text-white Confección 
                            span.badge.badge-pill.badge-brand-light.bg-brand-color-1.mr-2.text-white Maquinaría

                        .barra-dots.mt-5
                            img.img-fluid(src='assets/images/header/icon_dots.svg', alt='alt')

                    else 
                        p.curso-descripcion En este componente se abordan conocimientos técnicos de la competencia a desarrollar sobre patrones de prendas de vestir, reconociendo diferentes tipos de formas corpóreas, conceptos básicos de anatomía, el molde básico para la interpretación de la estructura corporal en el desarrollo integral de prendas de vestir.

                    if pagina == 'home'
                        a.curso-btn-iniciar.btn.bg-brand-color-1.badge-brand-light(href="main.html").mb-4
                            span.font-weight-bold.text-white Iniciar curso


            .col-12.col-lg-6.text-center
                .d-none.d-lg-block.mb-4
                    img(src= srcImagen).curso-imagen.w-100.p-5.mb-5


mixin referenciaItem(referencia, enlace, tituloenlace="")
    p= referencia
        if tituloenlace != ""
            a(href= enlace, target="_blank").ml-2= tituloenlace
        else if enlace != ""
            a(href= enlace, target="_blank").ml-2= enlace
    hr



mixin navTemaItem(numero, titulo, ruta)
    li.list-group-item.nav-tema-item
        .row.align-items-center
            if numero == 'play'
                .col-auto
                    .avatar.avatar-sm
                        span.nav-tema-item__icon.avatar-title.font-size-lg.bg-secondary-soft.rounded-circle.text-primary.font-weight-bold 
                            i.fa.fa-play
            else if numero == 'question'
                .col-auto
                    .avatar.avatar-sm
                        span.nav-tema-item__icon.avatar-title.font-size-lg.bg-secondary-soft.rounded-circle.text-primary.font-weight-bold 
                            i.fa.fa-question
            else if numero == 'text'
                .col-auto
                    .avatar.avatar-sm
                        span.nav-tema-item__icon.avatar-title.font-size-lg.bg-secondary-soft.rounded-circle.text-primary.font-weight-bold 
                            i.fa.fa-file-text-o
            else if numero == 'glosario'
                .col-auto
                    .avatar.avatar-sm
                        span.nav-tema-item__icon.avatar-title.font-size-lg.bg-secondary-soft.rounded-circle.text-primary.font-weight-bold 
                            i.fa.fa-sort-alpha-asc
            else if numero == 'complementario'
                .col-auto
                    .avatar.avatar-sm
                        span.nav-tema-item__icon.avatar-title.font-size-lg.bg-secondary-soft.rounded-circle.text-primary.font-weight-bold 
                            i.fa.fa-folder-open
            else if numero == 'referencias'
                .col-auto
                    .avatar.avatar-sm
                        span.nav-tema-item__icon.avatar-title.font-size-lg.bg-secondary-soft.rounded-circle.text-primary.font-weight-bold 
                            i.fa.fa-book
            else
                .col-auto
                    .avatar.avatar-sm
                        span.nav-tema-item__icon.avatar-title.font-size-lg.bg-secondary-soft.rounded-circle.text-primary.font-weight-bold= numero

            .col.ml-n2
                span.nav-tema-item__titulo 
                    a(href= ruta)= titulo
            .col-auto                                            
                a(href= ruta).btn.btn-light.nav-tema-item__btn
                    | Ver más
    
    
